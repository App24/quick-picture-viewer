{
    "name": "resizer",
    "version": "1.0.0",
    "title": "Resizer",
    "description": {
        "en": "Resize or crop image",
        "ru": "Изменить размер или обрезать изображение"
    },
    "link": "https://github.com/ModuleArt/quick-picture-viewer/tree/master/plugins",
    "authors": [
        {
            "name": "Beelink",
            "link": "https://github.com/Beelink"
        }
    ],
    "targets": [
        {
            "name": "quick-picture-viewer",
            "minVersion": "2.1.2",
            "maxVersion": "2.1.2"
        }
    ],
    "functions": [
        {
            "name": "resize",
            "title": {
                "en": "Resize",
                "ru": "Изменить размер"
            },
            "hotkey": {
                "ctrl": true,
                "shift": false,
                "key": "R"
            },
            "ops": {
                "image": true,
                "showDialog": true,
                "returnImage": true
            }
        },
        {
            "name": "crop",
            "title": {
                "en": "Crop / Canvas size",
                "ru": "Обрезать / Размер холста"
            },
            "hotkey": {
                "ctrl": true,
                "shift": true,
                "key": "R"
            },
            "ops": {
                "image": true,
                "showDialog": true,
                "returnImage": true
            }
        }
    ]
}